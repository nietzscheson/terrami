# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 119

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2
insert_final_newline = ignore

# Use 2 spaces for YAML files
[*.yml]
indent_size = 2

# Use 2 spaces for Terraform files
[*.tf]
indent_size = 2

# Use 2 spaces for Packer files
[packer.pkr.hcl]
indent_size = 2

# Use 2 spaces for Nix files
[*.nix]
indent_size = 2
